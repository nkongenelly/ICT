{
    "schemaVersion": 1,
    "schema": {
        "type": "container",
        "initialHeight": 300,
        "layout": "vertical",
        "children": [
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "fontSize": 10,
                "fontStyle": "bold",
                "textColor": "#32495f",
                "string": "${Form.properties[message].value}",
                "textAlignment": "left",
                "maxNumberOfLines": 4,
                "marginBottom": 0
            },
            {
                "type": "text",
                "paddingLeft": 10,
                "paddingRight": 10,
                "fontSize": 10,
                "fontStyle": "bold",
                "textColor": "#32495f",
                "string": "${Form.properties[incident].value}",
                "textAlignment": "left",
                "maxNumberOfLines": 4,
                "marginBottom": 0
            },
            {
                "type": "image",
                "paddingLeft": 10,
                "paddingRight": 10,
                "fontSize": 10,
                "fontStyle": "bold",
                "textColor": "#32495f",
                "string": "${Form.properties[image].value}",
                "textAlignment": "left",
                "maxNumberOfLines": 4,
                "marginBottom": 0
            }
        ]
    }
}